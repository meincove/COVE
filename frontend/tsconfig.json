{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["./types/glsl"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@data/*": ["./data/*"]
    }
  },
  "include": ["next-env.d.ts","types", "types/**/*.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "scripts/generateCatalogData.js"],
  "exclude": ["node_modules"]
}
